#lang "prelude.kl"
(import (shift "prelude.kl" 1))
(import (shift "quasiquote.kl" 1))

(define-macros
  ([gotta-be-word
    (lambda (stx)
      (syntax-case stx
        [(list (_ i))
          (syntax-case i
            [(word int) (pure (word-syntax (+ int int) i))]
            [_ (syntax-error (quasiquote/loc i "bad syntax"))])]
        [_ (syntax-error (quasiquote/loc stx "bad syntax"))]))]))

(example (gotta-be-word 2))
